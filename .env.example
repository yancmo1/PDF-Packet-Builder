# Copy to .env for local use (this file should NOT be committed)

# Preferred: App Store Connect API key auth
ASC_KEY_ID="YOUR_KEY_ID"
ASC_ISSUER_ID="YOUR_ISSUER_ID"
ASC_KEY_PATH="$HOME/.appstoreconnect/private_keys/AuthKey_YOUR_KEY_ID.p8"

# Optional fallback: Apple ID auth
FASTLANE_USER="you@example.com"
# Create at https://account.apple.com (App-Specific Passwords)
FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD="xxxx-xxxx-xxxx-xxxx"

# Optional alternative fallback:
# FASTLANE_SESSION="..."

# Optional: set to 1 to wait for App Store processing after upload
WAIT_FOR_PROCESSING="0"

# Optional: comma-separated TestFlight groups for external distribution
# TF_GROUPS="Internal Testers,Beta Testers"
