{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "prNumber",
      "type": "promptString",
      "description": "PR number (e.g., 21)",
      "default": ""
    },
    {
      "id": "prTopic",
      "type": "promptString",
      "description": "Short PR topic (e.g., audio-session-gating)",
      "default": ""
    }
  ],
  "tasks": [
    {
      "label": "Fastlane: Bootstrap (bundle install)",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "bundle install --path vendor/bundle"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Xcode: Clean DerivedData (PDFPacketBuilder)",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "rm -rf \"$HOME/Library/Developer/Xcode/DerivedData/PDFPacketBuilder-\"*"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Fastlane: Tests",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "set -a; [[ -f .env ]] && source .env; set +a; if command -v direnv >/dev/null 2>&1 && [[ -f .envrc ]]; then eval \"$(direnv export zsh 2>/dev/null)\" || true; fi; bundle exec fastlane tests"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Fastlane: Beta Upload",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "set -a; [[ -f .env ]] && source .env; set +a; if command -v direnv >/dev/null 2>&1 && [[ -f .envrc ]]; then eval \"$(direnv export zsh 2>/dev/null)\" || true; fi; bundle exec fastlane beta"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Fastlane: TestFlight Status",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "set -a; [[ -f .env ]] && source .env; set +a; if command -v direnv >/dev/null 2>&1 && [[ -f .envrc ]]; then eval \"$(direnv export zsh 2>/dev/null)\" || true; fi; bundle exec fastlane tf_status"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Fastlane: Upload Metadata & Screenshots",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "set -a; [[ -f .env ]] && source .env; set +a; if command -v direnv >/dev/null 2>&1 && [[ -f .envrc ]]; then eval \"$(direnv export zsh 2>/dev/null)\" || true; fi; bundle exec fastlane upload_metadata"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Fastlane: Submit for App Store Review",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "set -a; [[ -f .env ]] && source .env; set +a; if command -v direnv >/dev/null 2>&1 && [[ -f .envrc ]]; then eval \"$(direnv export zsh 2>/dev/null)\" || true; fi; bundle exec fastlane release"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Fastlane: Full App Store Submission",
      "type": "shell",
      "command": "zsh",
      "args": [
        "-lc",
        "set -a; [[ -f .env ]] && source .env; set +a; if command -v direnv >/dev/null 2>&1 && [[ -f .envrc ]]; then eval \"$(direnv export zsh 2>/dev/null)\" || true; fi; bundle exec fastlane release_full"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "üßæ PR Check: Copy Prompt",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/pr-check/copy_pr_check_prompt.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PR_NUMBER": "${input:prNumber}",
          "SHORT_TOPIC": "${input:prTopic}"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "üßæ PR Check: Copy Prompt (Edits)",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/pr-check/copy_pr_check_prompt.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PR_NUMBER": "${input:prNumber}",
          "SHORT_TOPIC": "${input:prTopic} edits",
          "TEMPLATE_PATH": ".vscode/pr_check_prompt_template_edits.md"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "üõ†Ô∏è PR Fix: Copy Implementation Prompt",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/pr-check/copy_pr_fix_prompt.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PR_NUMBER": "${input:prNumber}",
          "SHORT_TOPIC": "${input:prTopic}",
          "TEMPLATE_PATH": ".vscode/pr_fix_prompt_template.md"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "üìù PR Reply: Create/Open Reply File",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/pr-check/create_or_open_reply.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PR_NUMBER": "${input:prNumber}",
          "SHORT_TOPIC": "${input:prTopic}"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "üß© PR Handoff: Save Markdown from Clipboard",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/pr-check/save_clipboard_markdown.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "PR_NUMBER": "${input:prNumber}",
          "SHORT_TOPIC": "${input:prTopic}"
        }
      },
      "problemMatcher": []
    }
  ]
}
