# direnv example (copy to .envrc and run: direnv allow)
# Keep the .p8 file OUTSIDE the repo.

# Preferred: App Store Connect API key auth
export ASC_KEY_ID="YOUR_KEY_ID"
export ASC_ISSUER_ID="YOUR_ISSUER_ID"
export ASC_KEY_PATH="$HOME/.appstoreconnect/private_keys/AuthKey_YOUR_KEY_ID.p8"

# Optional fallback: Apple ID auth
export FASTLANE_USER="you@example.com"
# Create at https://account.apple.com (App-Specific Passwords)
export FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD="xxxx-xxxx-xxxx-xxxx"

# Optional alternative fallback:
# export FASTLANE_SESSION="..."

# Optional: set to 1 to wait for App Store processing after upload
export WAIT_FOR_PROCESSING="0"

# Optional: comma-separated TestFlight groups for external distribution
# export TF_GROUPS="Internal Testers,Beta Testers"
